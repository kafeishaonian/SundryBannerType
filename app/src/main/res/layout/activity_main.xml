<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/banner_item_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <!--<com.banner.client.BannerLayout-->
    <LinearLayout
        android:id="@+id/BannerCellLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:orientation="vertical">

        <com.banner.client.LoopViewPager
            android:id="@+id/gallery_banner_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:clipChildren="false"
            android:soundEffectsEnabled="false"
            android:spacing="0dp"
            android:unselectedAlpha="1"
            android:visibility="visible"/>
    <!--</com.banner.client.BannerLayout>-->
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!-- 右下角点状导航 -->

        <LinearLayout
            android:id="@+id/gallery_point_container"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
